[user]
	name = dpole
	email = davide.pole@gmail.com
[push]
	default = simple

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status
	ch = checkout

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = magenta bold
	frag = cyan bold
	old = red 
	new = blue

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -R
